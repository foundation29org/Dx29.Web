@page

@model UpdatePasswordModel

@using Microsoft.AspNetCore.Mvc.Localization
@using Dx29.Web

@inject IHtmlLocalizer<SharedResource> SharedLocalizer

@{
    ViewData["Title"] = SharedLocalizer["Change password required"];
}

<div class="row">
    <div class="offset-2 col-8">
        <section>
            <h3>@ViewData["Title"]</h3>
            <h6>@SharedLocalizer["Welcome to the new version of Dx29. For security reason, you are required to update your password."]</h6>
            <p>@SharedLocalizer["New passwords must contain an uppercase character, lowercase character, a digit, and a non-alphanumeric character. Passwords must be at least six characters long."]</p>
            <hr />
            <form id="change-password-form" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.OldPassword"></label>
                    <div style="display: flex; align-items: center;">
                        <input asp-for="Input.OldPassword" autocomplete="nope" class="form-control" id="oldPassword" />
                        <button id="button-old-password" class="btn" type="button">
                            <i id="icon-old-password" class="fa fa-eye"></i>
                        </button>
                    </div>
                    <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.NewPassword"></label>
                    <div style="display: flex; align-items: center;">
                        <input asp-for="Input.NewPassword" autocomplete="nope" class="form-control" id="newPassword" />
                        <button id="button-new-password" class="btn" type="button">
                            <i id="icon-new-password" class="fa fa-eye"></i>
                        </button>
                    </div>
                    <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <div style="display: flex; align-items: center;">
                        <input asp-for="Input.ConfirmPassword" autocomplete="nope" class="form-control" id="confirmPassword" />
                        <button id="button-confirm-password" class="btn" type="button">
                            <i id="icon-confirm-password" class="fa fa-eye"></i>
                        </button>
                    </div>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">@SharedLocalizer["Update password"]</button>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
