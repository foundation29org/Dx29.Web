<environment include="Development">
    <script src="~/Identity/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/Identity/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script type="text/javascript">
        // password validation
        $.validator.addMethod("passwordSpecial",
            function (value, element, parameters) {
                if (value.match(/[^a-zA-Z\d]/g)) {
                    return true;
                }
                return false;
            });
        $.validator.addMethod("passwordDigit",
            function (value, element, parameters) {
                if (value.match(/[0-9]/g)) {
                    return true;
                }
                return false;
            });

        $.validator.addMethod("passwordUpper",
            function (value, element, parameters) {
                if (value.match(/[A-Z]/g)) {
                    return true;
                }
                return false;
            });
        $.validator.addMethod("passwordLower",
            function (value, element, parameters) {
                if (value.match(/[a-z]/g)) {
                    return true;
                }
                return false;
            });
        $.validator.addMethod("passwordLenght",
            function (value, element, parameters) {
                var minLenght = 6;
                var maxLength = 100;
                if ((value.length > minLenght) && (value.length < maxLength)) {
                    return true;
                }
                return false;
            });

        $.validator.unobtrusive.adapters.add("passwordSpecial",
            [],
            function (options) {
                options.rules.passwordSpecial = {};
                options.messages["passwordSpecial"] = options.message;
            });
        $.validator.unobtrusive.adapters.add("passwordDigit",
            [],
            function (options) {
                options.rules.passwordDigit = {};
                options.messages["passwordDigit"] = options.message;
            });
        $.validator.unobtrusive.adapters.add("passwordUpper",
            [],
            function (options) {
                options.rules.passwordUpper = {};
                options.messages["passwordUpper"] = options.message;
            });
        $.validator.unobtrusive.adapters.add("passwordLower",
            [],
            function (options) {
                options.rules.passwordLower = {};
                options.messages["passwordLower"] = options.message;
            });
        $.validator.unobtrusive.adapters.add("passwordLenght",
            [],
            function (options) {
                options.rules.passwordLenght = {};
                options.messages["passwordLenght"] = options.message;
            });
    </script>

