@page
@model Dx29.Web.Pages.ErrorModel

@using Microsoft.AspNetCore.Mvc.Localization
@using Dx29.Web
@inject IHtmlLocalizer<SharedResource> SharedLocalizer

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>@SharedLocalizer["Error"]</title>
    <link href="~/css/bootstrap/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/app.css" rel="stylesheet" />
</head>

<body>
    <div class="main">
        <div class="content px-4">
            <h1 class="text-danger">@SharedLocalizer["Error."]</h1>
            <h2 class="text-danger">@SharedLocalizer["An error occurred while processing your request."]</h2>

            @if (Model.ShowRequestId)
            {
                <p>
                    <strong>@SharedLocalizer["Request ID:"]</strong> <code>@Model.RequestId</code>
                </p>
            }
        </div>
    </div>
</body>

</html>
