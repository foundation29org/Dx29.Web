@namespace Dx29.Web.UI.Components

@using System.Security.Claims

@inherits ComponentEx

@if (IsNotVisible == false)
{
    <div class="alert alert-custom alert-light-danger show p-4" role="alert">

        <div class="alert-icon"><i class="flaticon2-warning"></i></div>
        <div class="alert-text font-weight-bolder ml-1">
            @Localize["There are errors in the form, please check it before saving."]
        </div>
    </div>
}

@code
{
    [Parameter]
    public bool? IsNotVisible { get; set; } = true;

}
