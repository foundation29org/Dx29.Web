@namespace Dx29.Web.UI.Components

<TD CssClass="@CssClass" style="width: 40px">
    <div @onclick="OnClick">
        @if (IsSelected)
        {
            <i class="icon-lg fas fa-star text-warning"></i>
        }
        else
        {
            <i class="icon-lg far fa-star"></i>
        }
    </div>
</TD>

@code
{
    [Parameter]
    public string CssClass { get; set; }

    [Parameter]
    public bool IsSelected { get; set; }

    [Parameter]
    public EventCallback<bool> OnChanged { get; set; }

    private async void OnClick()
    {
        IsSelected = !IsSelected;
        await OnChanged.InvokeAsync(IsSelected);
    }
}
